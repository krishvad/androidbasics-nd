<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.udacitymusicapp.MainActivity">

    <!--LinearLayout that holds the items in the ScrollView-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/pop_culture_text_view"
            style="@style/TextViewsMainActivity"
            android:background="@color/famousPopTextViewBackGround"
            android:text="@string/famous_pop"/>

        <TextView
            android:id="@+id/Top_40_text_view"
            style="@style/TextViewsMainActivity"
            android:background="@color/top40TextViewBackGround"
            android:text="@string/top_40" />

        <TextView
            android:id="@+id/classic_text_view"
            style="@style/TextViewsMainActivity"
            android:background="@color/classicSongsTextViewBackGround"
            android:text="@string/classic_songs" />

        <TextView
            android:id="@+id/description"
            style="@style/TextViewDescription"
            android:text="@string/main_activity_purpose"/>

    </LinearLayout>
</ScrollView>









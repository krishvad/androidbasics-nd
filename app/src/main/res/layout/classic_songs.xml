            style="@style/TextView" />

        <TextView
            android:id="@+id/classic_3"
            style="@style/TextView"
            android:text = "Prince - Daddy Cool"/>

        <TextView
            android:id="@+id/classic_4"
            style="@style/TextView"
            android:text="Madonna - Crazy For You" />

    </LinearLayout>
</ScrollView>
